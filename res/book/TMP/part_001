\begin<<3220>>tex2html_deferred<<3220>>\par\end<<3221>>tex2html_deferred<<3221>>
\item \begin<<2510>>tex2html_wrap_inline<<2510>>$i=1$\end<<2511>>tex2html_wrap_inline<<2511>>, \begin<<2512>>tex2html_wrap_inline<<2512>>$j=1$\end<<2513>>tex2html_wrap_inline<<2513>>.
\begin<<3222>>tex2html_deferred<<3222>>\par\end<<3223>>tex2html_deferred<<3223>>
\item \begin<<2514>>tex2html_wrap_inline<<2514>>$j\leftarrow j+1$\end<<2515>>tex2html_wrap_inline<<2515>>, \begin<<2516>>tex2html_wrap_inline<<2516>>$\quad j=N$\end<<2517>>tex2html_wrap_inline<<2517>>で終了.
\begin<<3224>>tex2html_deferred<<3224>>\par\end<<3225>>tex2html_deferred<<3225>>
\item \begin<<2518>>tex2html_wrap_inline<<2518>>$\left[  0,1\right]  $\end<<2519>>tex2html_wrap_inline<<2519>>の区間の一<tex2html_comment_mark>1178
